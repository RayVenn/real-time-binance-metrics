# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_FLUSH_EVERY=100

# All topics to create: name:partitions:retention_ms (comma-separated)
# Add new topics here — kafka-setup will create them automatically
KAFKA_TOPICS=crypto-trades:3:86400000,crypto-trades-dlq:1:604800000

# Which topics each producer writes to (must match names in KAFKA_TOPICS)
KAFKA_TOPIC=crypto-trades
KAFKA_DLQ_TOPIC=crypto-trades-dlq

# ── Binance WebSocket ─────────────────────────────────────────────────────────
BINANCE_WS_URL=wss://data-stream.binance.vision/stream
# Comma-separated trading pairs (uppercase, no slash)
SYMBOLS=BTCUSDT

# ── Reconnection ──────────────────────────────────────────────────────────────
RECONNECT_DELAY_S=5
MAX_RECONNECT_DELAY_S=60

# ── Health server ─────────────────────────────────────────────────────────────
HEALTH_PORT=8080

# ── Coinbase WebSocket ─────────────────────────────────────────────────────────
COINBASE_WS_URL=wss://advanced-trade-ws.coinbase.com
COINBASE_SYMBOLS=BTC-USD
COINBASE_HEALTH_PORT=8082

# ── ClickHouse (used by Flink job) ────────────────────────────────────────────
CLICKHOUSE_URL=jdbc:clickhouse://clickhouse:8123/binance
