# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_TOPIC=binance-trades
KAFKA_DLQ_TOPIC=binance-trades-dlq
KAFKA_FLUSH_EVERY=100

# ── Binance WebSocket ─────────────────────────────────────────────────────────
BINANCE_WS_URL=wss://data-stream.binance.vision/stream
# Comma-separated trading pairs (uppercase, no slash)
SYMBOLS=BTCUSDT

# ── Reconnection ──────────────────────────────────────────────────────────────
RECONNECT_DELAY_S=5
MAX_RECONNECT_DELAY_S=60

# ── Health server ─────────────────────────────────────────────────────────────
HEALTH_PORT=8080

# ── ClickHouse (used by Flink job) ────────────────────────────────────────────
CLICKHOUSE_URL=jdbc:clickhouse://clickhouse:8123/binance
